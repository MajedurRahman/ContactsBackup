<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/onGreen" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="@color/pinkOrange" android:startColor="@color/pink" />
            <stroke android:width="1dp" android:color="@color/pinkText" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>